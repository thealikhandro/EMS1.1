<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.RegistrationPageController">
    <top>
        <AnchorPane prefHeight="100.0" prefWidth="600.0" style="-fx-background-color: #dd6400;" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="160.0" layoutY="30.0" text="User Registration" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Label prefWidth="120.0" text="User Type:" textFill="#dd6400">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="userTypeComboBox" prefWidth="200.0" promptText="Select User Type" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Label prefWidth="120.0" text="Username:" textFill="#dd6400">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="usernameField" prefWidth="200.0" promptText="Enter username" style="-fx-background-color: transparent; -fx-border-color: #dd6400; -fx-border-width: 0px 0px 2px 0px;" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Label prefWidth="120.0" text="Password:" textFill="#dd6400">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="passwordField" prefWidth="200.0" promptText="Enter password" style="-fx-background-color: transparent; -fx-border-color: #dd6400; -fx-border-width: 0px 0px 2px 0px;" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Label prefWidth="120.0" text="Confirm Password:" textFill="#dd6400">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="confirmPasswordField" prefWidth="200.0" promptText="Confirm password" style="-fx-background-color: transparent; -fx-border-color: #dd6400; -fx-border-width: 0px 0px 2px 0px;" />
                    </children>
                </HBox>
                <HBox fx:id="attendeeFieldsBox" alignment="CENTER" prefHeight="40.0" prefWidth="200.0" visible="false">
                    <children>
                        <Label prefWidth="120.0" text="Gender:" textFill="#dd6400">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="genderComboBox" prefWidth="200.0" promptText="Select Gender" />
                    </children>
                </HBox>
                <HBox fx:id="attendeeWalletBox" alignment="CENTER" prefHeight="40.0" prefWidth="200.0" visible="false">
                    <children>
                        <Label prefWidth="120.0" text="Initial Balance:" textFill="#dd6400">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="initialBalanceField" prefWidth="200.0" promptText="Enter initial balance" style="-fx-background-color: transparent; -fx-border-color: #dd6400; -fx-border-width: 0px 0px 2px 0px;" />
                    </children>
                </HBox>
                <HBox fx:id="adminFieldsBox" alignment="CENTER" prefHeight="40.0" prefWidth="200.0" visible="false">
                    <children>
                        <Label prefWidth="120.0" text="Role:" textFill="#dd6400">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="roleField" prefWidth="200.0" promptText="Enter admin role" style="-fx-background-color: transparent; -fx-border-color: #dd6400; -fx-border-width: 0px 0px 2px 0px;" />
                    </children>
                </HBox>
                <HBox fx:id="adminHoursBox" alignment="CENTER" prefHeight="40.0" prefWidth="200.0" visible="false">
                    <children>
                        <Label prefWidth="120.0" text="Working Hours:" textFill="#dd6400">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="workingHoursField" prefWidth="200.0" promptText="Enter working hours" style="-fx-background-color: transparent; -fx-border-color: #dd6400; -fx-border-width: 0px 0px 2px 0px;" />
                    </children>
                </HBox>
                <Label fx:id="messageLabel" alignment="CENTER" prefHeight="20.0" prefWidth="400.0" textAlignment="CENTER" textFill="RED">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#registerUser" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #dd6400;" text="Register" textFill="WHITE" />
                        <Button mnemonicParsing="false" onAction="#cancelRegistration" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #dd6400;" text="Cancel" textFill="WHITE" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>